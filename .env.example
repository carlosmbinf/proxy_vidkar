# Variables de entorno - Copia este archivo a .env y configura tus valores

# Puerto del servidor
PORT=3000

# Entorno de ejecución
NODE_ENV=development

# Base de datos (ejemplo)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mi_base_datos
# DB_USER=usuario
# DB_PASSWORD=password

# JWT Secret (ejemplo)
# JWT_SECRET=mi_secreto_super_secreto

# API Keys (ejemplo)
# API_KEY=tu_api_key_aqui

# DDP (Meteor) Server
DDP_ENDPOINT=ws://www.vidkar.com:3000/websocket
DDP_RECONNECT_INTERVAL=10000

# Método Meteor para autenticación (ejemplo)
DDP_LOGIN_METHOD=validateUserCredentials

# Proxy
PROXY_TARGET=https://api.ejemplo.com
PROXY_REQUIRE_AUTH=true
PROXY_TOKEN_TTL_SECONDS=3600

# Forward Proxy (servidor tipo proxy-chain)
FORWARD_PROXY_PORT=3002
DDP_USER_LOOKUP_METHOD=validateProxyUser
DDP_LOG_CONN_METHOD=markProxyConnected
DDP_LOG_DISC_METHOD=markProxyDisconnected
PROXY_VALIDATE_IP=false
ALLOWED_IP=